# Environment
NODE_ENV=development

# Server
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://hookmark:password@localhost:5432/hookmark_pro
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_PRO=price_1234567890abcdef_pro_monthly
STRIPE_PRICE_TEAMS=price_1234567890abcdef_teams_monthly
STRIPE_PRICE_ENTERPRISE=price_1234567890abcdef_enterprise_monthly

# Harbor AI (Local LLM)
HARBOR_BOOST_URL=http://localhost:8080/v1
HARBOR_MODEL=llama-3.1-70b

# Email (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@hookmarkpro.com
SUPPORT_EMAIL=support@hookmarkpro.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-change-this

# Logging
LOG_LEVEL=info
