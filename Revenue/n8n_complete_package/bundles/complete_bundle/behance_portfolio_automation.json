      "id": "instagram_publisher",
      "type": "n8n-nodes-base.httpRequest",
      "name": "Instagram Publisher",
      "parameters": {
        "url": "https://graph.facebook.com/v18.0/{{ $credentials.instagram.businessAccountId }}/media",
        "method": "POST",
        "authentication": "oAuth2",
        "bodyParameters": {
          "parameters": [
            {
              "name": "image_url",
              "value": "={{ $json.cover_image }}"
            },
            {
              "name": "caption",
              "value": "={{ $json.social_content.instagram.caption }}"
            },
            {
              "name": "access_token",
              "value": "={{ $credentials.instagram.accessToken }}"
            }
          ]
        }
      },
      "position": [
        1780,
        600
      ]
    },
    {
      "id": "analytics_tracker",
      "type": "n8n-nodes-base.function",
      "name": "Analytics Tracker",
      "parameters": {
        "functionCode": "// Track portfolio performance across platforms\nconst project = $input.first().json;\nconst timestamp = new Date().toISOString();\n\nconst analytics = {\n  project_id: project.project_id,\n  title: project.title,\n  platforms: {\n    behance: {\n      url: project.behance_url,\n      published_at: timestamp,\n      status: 'published'\n    },\n    linkedin: {\n      post_id: project.linkedin_post_id || null,\n      published_at: timestamp,\n      status: project.linkedin_post_id ? 'published' : 'pending'\n    },\n    twitter: {\n      tweet_id: project.twitter_tweet_id || null,\n      published_at: timestamp,\n      status: project.twitter_tweet_id ? 'published' : 'pending'\n    },\n    instagram: {\n      media_id: project.instagram_media_id || null,\n      published_at: timestamp,\n      status: project.instagram_media_id ? 'published' : 'pending'\n    }\n  },\n  metrics: {\n    total_platforms: 4,\n    published_platforms: 0,\n    pending_platforms: 0\n  },\n  created_at: timestamp\n};\n\n// Count published platforms\nfor (const [platform, data] of Object.entries(analytics.platforms)) {\n  if (data.status === 'published') {\n    analytics.metrics.published_platforms++;\n  } else {\n    analytics.metrics.pending_platforms++;\n  }\n}\n\nreturn [{ json: analytics }];"
      },
      "position": [
        2000,
        300
      ]
    },
    {
      "id": "database_logger",
      "type": "n8n-nodes-base.postgres",
      "name": "Database Logger",
      "parameters": {
        "operation": "insert",
        "schema": "public",
        "table": "portfolio_analytics",
        "columns": "project_id, title, platforms, metrics, created_at",
        "additionalFields": {}
      },
      "position": [
        2220,
        300
      ]
    },
    {
      "id": "notification_sender",
      "type": "n8n-nodes-base.emailSend",
      "name": "Notification Sender",
      "parameters": {
        "toEmail": "admin@quantumforgelabs.com",
        "subject": "Portfolio Published Successfully - {{ $json.title }}",
        "message": "Your portfolio project has been published across multiple platforms:\n\nProject: {{ $json.title }}\nBehance: {{ $json.platforms.behance.url }}\nLinkedIn: {{ $json.platforms.linkedin.status }}\nTwitter: {{ $json.platforms.twitter.status }}\nInstagram: {{ $json.platforms.instagram.status }}\n\nPublished on {{ $json.metrics.published_platforms }} out of {{ $json.metrics.total_platforms }} platforms.\n\nTimestamp: {{ $json.created_at }}"
      },
      "position": [
        2440,
        300
      ]
    }
