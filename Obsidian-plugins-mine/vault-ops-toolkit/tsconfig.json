{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "noImplicitAny": true,
    "moduleResolution": "Bundler",
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}