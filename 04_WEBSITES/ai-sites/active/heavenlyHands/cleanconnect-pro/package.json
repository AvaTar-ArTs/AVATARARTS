{
  "name": "cleanconnect-pro",
  "version": "1.0.0",
  "description": "AI-Powered Airbnb Cleaning Marketplace - Revolutionary platform connecting hosts with verified cleaning professionals",
  "main": "backend/src/app.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mobile": "cd mobile && python -m http.server 8080",
    "build": "cd frontend && npm run build",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop cleanconnect-api",
    "restart": "pm2 restart cleanconnect-api",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:integration": "cd tests && npm run test",
    "test:e2e": "cd tests && npm run test:e2e",
    "test:coverage": "cd backend && npm run test:coverage",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix",
    "migrate": "cd backend && npm run migrate",
    "migrate:create": "cd backend && npm run migrate:create",
    "migrate:up": "cd backend && npm run migrate:up",
    "migrate:down": "cd backend && npm run migrate:down",
    "seed": "cd backend && npm run seed",
    "db:reset": "cd backend && npm run db:reset",
    "db:backup": "cd backend && npm run db:backup",
    "docs": "cd docs && npm run serve",
    "deploy": "npm run build && npm run migrate && npm run start"
  },
  "keywords": [
    "airbnb",
    "cleaning",
    "marketplace",
    "ai-powered",
    "booking",
    "real-time",
    "pwa",
    "nodejs",
    "postgresql",
    "react",
    "quantumforgelabs"
  ],
  "author": "Quantum Forge Labs <dev@quantumforgelabs.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantumforgelabs/cleanconnect-pro.git"
  },
  "bugs": {
    "url": "https://github.com/quantumforgelabs/cleanconnect-pro/issues"
  },
  "homepage": "https://cleanconnect.quantumforgelabs.org",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "socket.io": "^4.7.4",
    "stripe": "^14.7.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "multer": "^2.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  }
}
