# CleanConnect Pro - Environment Configuration
# Production-ready environment variables with security best practices

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3000
API_VERSION=v2.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database URL
DATABASE_URL="postgresql://cleanconnect_user:secure_password@localhost:5432/cleanconnect_pro"

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Secrets (Generate secure keys in production)
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-change-this-in-production"
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# Cache Settings
CACHE_TTL=3600
SESSION_TTL=86400

# ===========================================
# AI & MACHINE LEARNING SERVICES
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# Groq Configuration
GROQ_API_KEY="your-groq-api-key"
GROQ_MODEL="llama3-8b-8192"

# Computer Vision Services
GOOGLE_VISION_API_KEY="your-google-vision-api-key"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# ===========================================
# PAYMENT PROCESSING
# ===========================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Payment Settings
PAYMENT_CURRENCY=USD
PAYMENT_MIN_AMOUNT=25
PAYMENT_MAX_AMOUNT=1000
PAYMENT_FEE_PERCENTAGE=2.9
PAYMENT_FEE_FIXED=0.30

# ===========================================
# COMMUNICATION SERVICES
# ===========================================
# Email Configuration (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Email Templates
EMAIL_FROM="CleanConnect Pro <noreply@cleanconnectpro.com>"
EMAIL_REPLY_TO="support@cleanconnectpro.com"

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ===========================================
# FILE STORAGE & CDN
# ===========================================
# AWS S3 Configuration
AWS_S3_BUCKET="cleanconnect-pro-uploads"
AWS_S3_REGION="us-east-1"
AWS_S3_ACCESS_KEY_ID="your-s3-access-key"
AWS_S3_SECRET_ACCESS_KEY="your-s3-secret-key"

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"
UPLOAD_PATH="./uploads"

# CDN Configuration
CDN_URL="https://cdn.cleanconnectpro.com"
CDN_CACHE_TTL=31536000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_URL="http://localhost:8080"
ADMIN_URL="http://localhost:8080/admin"
MOBILE_URL="http://localhost:8080/mobile"

# CORS Settings
CORS_ORIGIN="http://localhost:8080,http://localhost:3000"
CORS_CREDENTIALS=true

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics
GA_MEASUREMENT_ID="G-XXXXXXXXXX"
GA_TRACKING_ID="UA-XXXXXXXXX-X"

# Sentry Error Tracking
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT="development"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5

# ===========================================
# SOCIAL MEDIA INTEGRATION
# ===========================================
# Facebook API
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Twitter API
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
TWITTER_ACCESS_TOKEN="your-twitter-access-token"
TWITTER_ACCESS_TOKEN_SECRET="your-twitter-access-token-secret"

# Instagram API
INSTAGRAM_APP_ID="your-instagram-app-id"
INSTAGRAM_APP_SECRET="your-instagram-app-secret"

# ===========================================
# WEB3 & BLOCKCHAIN
# ===========================================
# Ethereum Configuration
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/your-infura-project-id"
ETHEREUM_PRIVATE_KEY="your-ethereum-private-key"
ETHEREUM_CONTRACT_ADDRESS="0x..."

# Polygon Configuration
POLYGON_RPC_URL="https://polygon-mainnet.infura.io/v3/your-infura-project-id"
POLYGON_PRIVATE_KEY="your-polygon-private-key"

# IPFS Configuration
IPFS_GATEWAY_URL="https://ipfs.io/ipfs/"
IPFS_API_URL="https://api.pinata.cloud"

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Google Maps API
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Weather API
WEATHER_API_KEY="your-weather-api-key"

# Calendar Integration
GOOGLE_CALENDAR_API_KEY="your-google-calendar-api-key"

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
# Test Database
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/cleanconnect_test"

# Test Configuration
TEST_TIMEOUT=30000
TEST_PARALLEL=true

# Development Tools
DEBUG_MODE=true
VERBOSE_LOGGING=true
HOT_RELOAD=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# SSL Configuration
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/private.key"

# Security Headers
SECURITY_HEADERS=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Performance
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
CDN_ENABLED=false

# ===========================================
# MONITORING & ALERTS
# ===========================================
# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Alert Configuration
ALERT_EMAIL="alerts@cleanconnectpro.com"
ALERT_SLACK_WEBHOOK="your-slack-webhook-url"
ALERT_DISCORD_WEBHOOK="your-discord-webhook-url"

# ===========================================
# BACKUP & RECOVERY
# ===========================================
# Database Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="cleanconnect-pro-backups"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/Disable Features
FEATURE_AI_MATCHING=true
FEATURE_REAL_TIME_TRACKING=true
FEATURE_WEB3_INTEGRATION=false
FEATURE_AR_FEATURES=false
FEATURE_VOICE_COMMANDS=false
FEATURE_OFFLINE_MODE=true

# ===========================================
# BUSINESS LOGIC
# ===========================================
# Booking Settings
MIN_BOOKING_HOURS=1
MAX_BOOKING_HOURS=8
BOOKING_ADVANCE_DAYS=30
CANCELLATION_WINDOW_HOURS=24

# Pricing Configuration
BASE_HOURLY_RATE=25
PREMIUM_HOURLY_RATE=35
LUXURY_HOURLY_RATE=50
PLATFORM_FEE_PERCENTAGE=10

# Quality Assurance
MIN_RATING_THRESHOLD=4.0
REVIEW_REQUIRED=true
PHOTO_VERIFICATION=true

# ===========================================
# COMPLIANCE & LEGAL
# ===========================================
# Privacy Settings
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555

# Terms & Conditions
TERMS_VERSION="2.0"
PRIVACY_POLICY_VERSION="2.0"

# ===========================================
# CUSTOMIZATION
# ===========================================
# Branding
BRAND_NAME="CleanConnect Pro"
BRAND_LOGO_URL="/images/logo.svg"
BRAND_COLOR_PRIMARY="#2563eb"
BRAND_COLOR_SECONDARY="#10b981"

# Localization
DEFAULT_LANGUAGE="en"
SUPPORTED_LANGUAGES="en,es,fr"
TIMEZONE="America/New_York"
CURRENCY="USD"

