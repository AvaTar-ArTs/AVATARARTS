# Content Research Agent Dockerfile
# ==================================
# Specialized container for content analysis and research

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    libpq-dev \
    tesseract-ocr \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install content analysis libraries
RUN pip install --no-cache-dir \
    openai \
    anthropic \
    groq \
    PyPDF2 \
    pdfplumber \
    python-docx \
    beautifulsoup4 \
    lxml \
    markdown \
    nltk \
    spacy \
    scikit-learn \
    numpy \
    pandas \
    matplotlib \
    seaborn \
    wordcloud \
    textstat \
    readability \
    python-dotenv

# Download NLTK data
RUN python -c "import nltk; nltk.download('punkt'); nltk.download('stopwords'); nltk.download('vader_lexicon')"

# Download spaCy model
RUN python -m spacy download en_core_web_sm

# Copy application files
COPY content_research_agent.py .
COPY env_d_loader.py .

# Create necessary directories
RUN mkdir -p /app/research /app/logs /app/documents

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 5001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5001/health || exit 1

# Run the application
CMD ["python", "content_research_agent.py"]