# n8n AI Agent Environment Configuration
# ======================================
# Copy this to .env and fill in your values

# Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_postgres_password_here

# n8n Configuration
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_here
TZ=America/New_York
GENERIC_TIMEZONE=America/New_York
N8N_SECURE_COOKIE=true
N8N_PROXY_HOPS=1

# AI API Keys - Core LLMs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here
XAI_API_KEY=your_xai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Audio & Music APIs
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
SUNO_COOKIE=your_suno_cookie_here
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Art & Vision APIs
STABILITY_API_KEY=your_stability_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here
RUNWAY_API_KEY=your_runway_api_key_here
LEONARDO_API_KEY=your_leonardo_api_key_here

# Automation & Agents APIs
PINECONE_API_KEY=your_pinecone_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
FIREWORKS_API_KEY=your_fireworks_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Documents & Knowledge APIs
NOTION_TOKEN=your_notion_token_here

# SEO & Analytics APIs
SERPAPI_KEY=your_serpapi_key_here
NEWSAPI_KEY=your_newsapi_key_here

# Monitoring (Optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=200h

# Webhook URLs
N8N_WEBHOOK_URL=http://n8n:5678
AI_AGENT_URL=http://ai-agent:5000
CONTENT_RESEARCH_URL=http://content-research:5001

# File Paths
DOCUMENTS_PATH=/Users/steven/Documents
RESEARCH_OUTPUT_PATH=/app/research
LOCAL_FILES_PATH=./local-files

# Logging
LOG_LEVEL=INFO
FLASK_ENV=production
FLASK_DEBUG=false