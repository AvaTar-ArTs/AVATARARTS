# ---------- Timezone ----------
TZ=America/New_York
GENERIC_TIMEZONE=America/New_York

# ---------- n8n ----------
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=CHANGE_ME_STRONG_KEY
N8N_SECURE_COOKIE=true
N8N_PROXY_HOPS=1

# ---------- Postgres (used by compose.postgres.local.yml & compose.caddy.local.yml) ----------
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD
