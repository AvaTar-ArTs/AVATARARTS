# -------- Domain & TLS --------
DOMAIN_NAME=example.com
SUBDOMAIN=n8n
SSL_EMAIL=you@example.com

# -------- n8n --------
# A random 32+ byte key (generate with: openssl rand -base64 32)
N8N_ENCRYPTION_KEY=CHANGE_ME_STRONG_KEY
GENERIC_TIMEZONE=America/New_York
TZ=America/New_York

# -------- Postgres (only for compose.postgres-traefik.yml) --------
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

# -------- Caddy (only for compose.caddy.yml) --------
N8N_HOST=n8n.example.com
